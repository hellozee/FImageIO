#pragma once

#include <string>
#include <memory>

#include <FImageIO/config/base.hh>

namespace fiio{

    class base;

    class image{

    public:
        explicit image(std::string fname);   
        void save(const std::string &fname, 
                std::unique_ptr<fiio::config::base> config);
        
        inline std::string filename() { return _filename; }

    private:
        std::string _filename;
        std::shared_ptr<fiio::base> _image_data;
    };

}
